<%- model_class = Projecct -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:owner) %></th>
      <th><%= model_class.human_attribute_name(:Description) %></th>
      <th><%= model_class.human_attribute_name(:subdomain) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @projeccts.each do |projecct| %>
      <tr>
        <td><%= link_to projecct.name, root_url(subdomain: projecct.subdomain ) %></td>
        <td><%= projecct.owner %></td>
        <td><%= projecct.Description %></td>
        <td><%= projecct.subdomain %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_projecct_path(projecct), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      projecct_path(projecct),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_projecct_path,
            :class => 'btn btn-primary' %>
